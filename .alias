# File System
alias ll='ls -alh'

# Navigation
function c {
  cd ~/workspace/$1
}

function mkd {
  mkdir -p "$1" && cd "$1"
}

# Git helpers
function gmain {
  git symbolic-ref refs/remotes/origin/HEAD 2>/dev/null | sed 's@^refs/remotes/origin/@@' || echo "main"
}

# Git aliases
alias g='git'
alias gco='g checkout'
alias gpo='g push origin'
alias gcom='gco $(gmain)'
alias gpom='g pull origin $(gmain)'
alias gst='git status -s'
alias glg='g log --graph --decorate --oneline'

# Git functions
function rbm {
  local main_branch=$(gmain)
  gco $main_branch && git pull origin $main_branch && gco $1 && git rebase $main_branch
}

function clb {
  local main_branch=$(gmain)
  gco $main_branch && git pull origin $main_branch && git fetch -p && git branch -D $1
}

function gpc {
  local current_branch=$(git branch --show-current)
  local main_branch=$(gmain)
  git add . && \
  git commit -m "$1" && \
  gco $main_branch && \
  git pull origin $main_branch && \
  git fetch -p && \
  gco $current_branch && \
  git rebase $main_branch && \
  gpo
}

function gsc {
  git add . && git stash && git stash clear
}

# Tmux
alias tls='tmux ls'

function t {
  if tmux has-session -t "$1" 2>/dev/null; then
    tmux attach -t "$1"
  else
    tmux new -s "$1"
  fi
}

# Extract any archive
function extract {
  if [ -f $1 ]; then
    case $1 in
      *.tar.bz2)   tar xjf $1     ;;
      *.tar.gz)    tar xzf $1     ;;
      *.bz2)       bunzip2 $1     ;;
      *.rar)       unrar e $1     ;;
      *.gz)        gunzip $1      ;;
      *.tar)       tar xf $1      ;;
      *.tbz2)      tar xjf $1     ;;
      *.tgz)       tar xzf $1     ;;
      *.zip)       unzip $1       ;;
      *.Z)         uncompress $1  ;;
      *.7z)        7z x $1        ;;
      *)           echo "'$1' cannot be extracted via extract()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}
